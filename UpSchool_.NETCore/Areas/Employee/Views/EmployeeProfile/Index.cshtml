@using UpSchool_.NETCore.Areas.Employee.Models
@model UserEditProfile
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h1>Index</h1>

<form method="post" class="form-group" enctype="multipart/form-data">
    <label>Adınız: </label> 
    <input type="text" asp-for="Name" class="form-control"/>
    <br />
    <label>Soyadınız: </label>
    <input type="text" asp-for="Surname" class="form-control" />
    <br />
    <label>Email: </label>
    <input type="text" asp-for="Email" class="form-control" />
    <br />
    <label>Telefon Numarası: </label>
    <input type="text" asp-for="PhoneNumber" class="form-control" />
    <br />
    <label>Şifre: </label>
    <input type="text" asp-for="Password" class="form-control" />
    <br />
    <label>Şifre Tekrarı: </label>
    <input type="text" asp-for="ConfirmPassword" class="form-control" />
    <br />
    <!--Burada direk görselin kendisi alınır. Backend tarafında url'i alınır.-->
    <label>Resim Seçiniz: </label>
    <input type="file" asp-for="Image" class="form-control" />
    <br />
    <button class="btn btn-success"> Kaydet </button>
</form>