@model List<UpSchool.EntityLayer.Concrete.Category>
@{
 ViewBag.Title ="deneme";
}

<h1>Kategori Listesi</h1>

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Kategori Adı:</th>
        <th>Durum:</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="#" class="btn btn-warning">Durum</a></td>
            <td><a href="#" class="btn btn-warning">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>