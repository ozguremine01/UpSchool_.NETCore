@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
}
@model List<AppRole>
<h1>Rol Listesi</h1>

<br />

<table>
    <tr>#</tr>
    <tr>Rol Adı</tr>
    <tr>Rol Sil</tr>
    @foreach (var item in Model)
   {
     <tr>
         <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-danger">Sil</a></td>
        </tr>  
   }
</table>