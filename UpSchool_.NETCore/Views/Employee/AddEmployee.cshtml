@model UpSchool_.NETCore.Models

@{
}

<form method="post">
    <label>Personel Adı</label>
    <input type="text" asp-for="EmployeeName" class="form-control"/>
    <span asp-validation-for="EmployeeName" class="form-control" />
    <br />

    <label>Personel Görsel</label>
    <input type="text" asp-for="EmployeeImage" class="form-control" />
    <span asp-validation-for="EmployeeImage" class="form-control" />

    <br />

    <label>Kategorisi</label>
    <input type="text" asp-for="CategoryID" class="form-control" />
    <span asp-validation-for="CategoryID" class="text-danger"></span>
    <br />
    <button class="btn btn-info">Personeli Kaydet</button>
</form>